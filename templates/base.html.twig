<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>{% block title %}{{ global_config['site_title'] }}{% endblock %}</title>
	
	{% block stylesheets %}
		{{ encore_entry_link_tags('style') }}
	{% endblock %}
	
	{% block javascript %}
		{{ encore_entry_script_tags('script') }}
	{% endblock %}

	<link rel="icon" href="{{ asset('images/favicon.ico') }}" />
</head>
<body>
<div id="prompt_message" class="row justify-content-center align-items-center m-0 px-5">
	<div class="col-xl-8 p-5 rounded">
		<p id="prompt_message_text"></p>
		<div>
			<a href="#" id="prompt_message_submit" class="btn btn-primary">Valider</a>
			<button class="btn btn-secondary" id="prompt_message_cancel">Annuler</button>
		</div>
	</div>
</div>
<section id="header">
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<a class="navbar-brand" href="/"><img src="{{ asset('images/logo.png') }}" height="36px" width="36px" alt="logo"></a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
			<div class="navbar-nav">
				<a href="/" class="nav-item nav-link">Accueil</a>
				
				{% for p in global_pages %}
					<a href="{{ path('page', {'url': p.url}) }}" class="nav-item nav-link">{{ p.title }}</a>
				{% endfor %}

				<a href="{{ path('contact') }}" class="nav-item nav-link">Contact</a>

				{% if is_granted('ROLE_ADMIN') %}
					<a href="{{ path('cblog_admin') }}" class="nav-item nav-link">Panel admin</a>
				{% endif %}

				{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
					<a href="{{ path('fos_user_security_logout') }}" class="nav-item nav-link">DÃ©connexion</a>
				{% endif %}
			</div>
		</div>
	</nav>
</section>

<section id="content" class="row no-gutters justify-content-center my-5">
	<div class="col-xl-9 p-4">
		{% block body %}{% endblock %}
	</div>
</section>

<section id="footer">
</section>
</body>
</html>
